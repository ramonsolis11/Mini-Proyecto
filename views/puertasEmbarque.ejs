                <a class="nav-link" href="/puertas-embarque">Puertas de Embarque</a>
            </li>
            </ul>
        </div>
        </div>
    </nav>

    <header>
        <div class="container">
            <h1 class="mt-4">Puertas de Embarque</h1>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Número de Puerta</th>
                            <th scope="col">Disponibilidad</th>
                            <th scope="col">Avión Asignado</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% puertasEmbarque.forEach(puerta => { %>
                        <tr>
                            <td><%= puerta.numero %></td>
                            <td class="<%= puerta.disponible ? 'text-success' : 'text-danger' %>">
                                <%= puerta.disponible ? 'Disponible' : 'Asignado' %>
                            </td>
                            <td>
                                <% if (puerta.avionAsignado) { %>
                                <%= `${puerta.avionAsignado.registro} - ${puerta.avionAsignado.aerolinea}` %>
                                <% } else { %>
                                Sin asignar
                                <% } %>
                            </td>
                            <td>
                                <% if (puerta.disponible) { %>
                                <form class="asignar-form" action="/puertas-embarque/asignar" method="POST">
                                    <input type="hidden" name="puertaEmbarque" value="<%= puerta.numero %>">
                                    <button type="submit" class="btn btn-primary">Asignar Avión</button>
                                </form>
                                <% } else { %>
                                <form class="desasignar-form" action="/puertas-embarque/desasignar" method="POST">
                                    <input type="hidden" name="puertaEmbarque" value="<%= puerta.numero %>">
                                    <button type="submit" class="btn btn-danger">Desasignar Avión</button>
                                </form>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </header>

    <!-- footer -->
<footer id="footer">
